<!DOCTYPE html>
<html lang="ko">
    <head>
        <%- include('../common/head.ejs', {title: '로그인' }) %>
        <link rel="stylesheet" href="/static/css/pages/login.css" />
    </head>

    <body>
        <%- include('../common/header.ejs') %>
        <main>
            <div class="section">
                <div class="container">
                    <div class="row full-height justify-content-center">
                        <div class="col-12 text-center align-self-center py-5">
                            <div class="section pb-5 pt-5 pt-sm-2 text-center">
                                <!-- <h4 class="mb-0 pb-3">Flip it!</h4> -->
                                <input
                                    class="checkbox"
                                    type="checkbox"
                                    id="reg-log"
                                    name="reg-log"
                                />
                                <label for="reg-log"></label>
                                <div class="card-3d-wrap mx-auto">
                                    <div class="card-3d-wrapper">
                                        <div class="card-front">
                                            <div class="center-wrap">
                                                <div
                                                    class="section text-center"
                                                >
                                                    <h6 class="pb-3">
                                                        <span>user</span>
                                                        <br />
                                                        <span>00000000</span>
                                                    </h6>
                                                    <form name="userFormLogin">
                                                        <div class="form-group">
                                                            <label
                                                                for="userId"
                                                            ></label>
                                                            <input
                                                                id="userId"
                                                                type="text"
                                                                name="userId"
                                                                class="form-style"
                                                                placeholder="Id"
                                                                required
                                                            />
                                                        </div>
                                                        <div class="form-group">
                                                            <label
                                                                for="userPw"
                                                            ></label>
                                                            <input
                                                                id="userPw"
                                                                type="password"
                                                                name="userPw"
                                                                class="form-style"
                                                                placeholder="Password"
                                                                required
                                                            />
                                                        </div>
                                                        <button
                                                            type="button"
                                                            class="btn mt-4"
                                                            onclick="userLogin()"
                                                        >
                                                            LOGIN
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-back">
                                            <div class="center-wrap">
                                                <div
                                                    class="section text-center"
                                                >
                                                    <h6 class="pb-3">
                                                        <span>manager</span>
                                                        <br />

                                                        <span>00000000</span>
                                                    </h6>
                                                    <form
                                                        name="managerFormLogin"
                                                    >
                                                        <div class="form-group">
                                                            <label
                                                                for="managerId"
                                                            ></label>
                                                            <input
                                                                id="managerId"
                                                                type="text"
                                                                name="managerId"
                                                                class="form-style"
                                                                placeholder="Manager Id"

                                                                required
                                                            />
                                                        </div>
                                                        <div class="form-group">
                                                            <label

                                                                for="managerPw"
                                                            ></label>
                                                            <input
                                                                id="managerPw"
                                                                type="password"
                                                                name="managerPw"
                                                                class="form-style"
                                                                placeholder="Manager Password"

                                                                required
                                                            />
                                                        </div>
                                                        <button
                                                            type="button"
                                                            class="btn mt-4"

                                                            onclick="managerLogin()"

                                                        >
                                                            LOGIN
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../common/footer.ejs') %>
        <script>
            function userLogin() {
                const form = document.forms['userFormLogin'];

                if (form.userId.value === '') {
                    alert('아이디를 입력 해주세요.');
                    return form.userId.focus();
                }
                if (form.userPw.value === '') {
                    alert('비밀번호를 입력 해주세요.');
                    return form.userPw.focus();
                }
                axios({
                    method: 'POST',
                    url: '/login',
                    data: {
                        userId: userFormLogin.userId.value,
                        userPw: userFormLogin.userPw.value,
                    },
                }).then((res) => {
                    if (res.data.result === false) {
                        if (
                            res.data.idCheck === true &&
                            res.data.pwCheck === false
                        ) {
                            alert('비밀번호가 틀렸습니다.');
                        } else if (res.data.idCheck === false) {
                            alert('존재하는 사용자가 아닙니다.');
                        }
                    } else {
                        alert('로그인 성공!');

                        document.location.href = '/';
                    }
                });
            }
            function managerLogin() {
                const form = document.forms['managerFormLogin'];

                if (form.managerId.value === '') {
                    alert('아이디를 입력 해주세요.');
                    return form.managerId.focus();
                }
                if (form.managerId.value === '') {
                    alert('비밀번호를 입력 해주세요.');
                    return form.managerId.focus();
                }
                axios({
                    method: 'POST',
                    url: '/login',
                    data: {
                        userId: managerFormLogin.managerId.value,
                        userPw: managerFormLogin.managerPw.value,
                    },
                }).then((res) => {
                    if (res.data.result === false) {
                        if (
                            res.data.idCheck === true &&
                            res.data.pwCheck === false
                        ) {
                            alert('비밀번호가 틀렸습니다.');
                        } else if (res.data.idCheck === false) {
                            alert('존재하는 관리자가 아닙니다.');
                        }
                    } else {
                        alert('로그인 성공!');

                        document.location.href = '/';
                    }
                });
            }
        </script>
    </body>
</html>

<!-- 지형: 유저가 입력한 정보는 userId, userPw 변수로 넘겨주시면 됩니다! -->

