<html lang="ko">
    <head>
        <%- include('../../common/head.ejs', {title: '행사 글 작성' }) %>
        <script defer src="/static/js/eventWrite.js"></script>
    </head>

    <body>
        <%- include('../../common/header.ejs') %>
        <main>
            <div class="wrap">
                <form NAME="register-conference">
                    <section class="py-5 border-bottom">
                        <h2 class="fw-bold fs-5 mb-5">행사 기본 정보</h2>
                        <div class="row mb-4">
                            <label
                                for="conTitle"
                                class="col-sm-2 col-form-label"
                                >행사 이름</label
                            >
                            <div class="col-sm-10">
                                <input
                                    type="text"
                                    class="form-control"
                                    id="conTitle"
                                    name="conTitle"
                                />
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="conDetail" class="form-label"
                                >행사 상세 내용</label
                            >
                            <textarea
                                class="form-control"
                                id="conDetail"
                                name="conDetail"
                                rows="3"
                            ></textarea>
                        </div>
                        <div class="row mb-4">
                            <label
                                for="conCompany"
                                class="col-sm-2 col-form-label"
                                >행사 주최</label
                            >
                            <div class="col-sm-10">
                                <input
                                    type="text"
                                    class="form-control"
                                    id="conCompany"
                                    name="conCompany"
                                />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <label
                                for="conCompanyUrl"
                                class="col-sm-2 col-form-label"
                                >행사 주최 URL</label
                            >
                            <div class="col-sm-10">
                                <input
                                    type="text"
                                    class="form-control"
                                    id="conCompanyUrl"
                                    name="conCompanyUrl"
                                />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <label
                                for="formFile"
                                class="col-sm-2 col-form-label"
                                >행사 대표 이미지</label
                            >
                            <div class="col-sm-10">
                                <input
                                    id="dynamic-file"
                                    class="form-control"
                                    type="file"
                                    id="formFile"
                                    name="conferenceFile"
                                />
                            </div>
                        </div>

                        <div class="row mb-4">
                            <legend class="col-form-label col-sm-2">
                                행사 카테고리
                            </legend>
                            <div class="col-sm-10">
                                <select
                                    class="form-select"
                                    aria-label="Default select example"
                                    id="conCategory"
                                    name="conCategory"
                                >
                                    <option selected value="">
                                        카테고리를 선택해주세요.
                                    </option>
                                    <option value="AI">AI</option>
                                    <option value="web">웹 개발</option>
                                    <option value="git">git</option>
                                </select>
                            </div>
                        </div>
                    </section>
                    <section class="py-5 border-bottom">
                        <h2 class="fw-bold fs-5 mb-5">행사 시간</h2>
                        <div class="d-flex gap-3">
                            <div class="d-flex w-50 gap-4">
                                <div class="mb-3 w-50">
                                    <label for="conStartDate" class="pb-2"
                                        >행사 시작일</label
                                    >
                                    <div class="">
                                        <input
                                            type="date"
                                            class="form-control"
                                            id="conStartDate"
                                            name="conStartDate"
                                        />
                                    </div>
                                </div>
                                <div class="mb-3 w-50">
                                    <label for="conEndDate" class="pb-2"
                                        >행사 종료일</label
                                    >
                                    <div class="">
                                        <input
                                            type="date"
                                            class="form-control"
                                            id="conEndDate"
                                            name="conEndDate"
                                        />
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex w-50 gap-4">
                                <div class="mb-3 w-50">
                                    <label for="subStartDate" class="pb-2"
                                        >모집 시작일
                                    </label>
                                    <div class="">
                                        <input
                                            type="date"
                                            class="form-control"
                                            id="subStartDate"
                                            name="subStartDate"
                                        />
                                    </div>
                                </div>
                                <div class="mb-3 w-50">
                                    <label for="subEndDate" class="pb-2"
                                        >모집 종료일
                                    </label>
                                    <div class="">
                                        <input
                                            type="date"
                                            class="form-control"
                                            id="subEndDate"
                                            name="subEndDate"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="py-5 border-bottom">
                        <h2 class="fw-bold fs-5 mb-5">행사 장소</h2>
                        <div class="row mb-3">
                            <div class="col-sm-5">
                                <%-
                                include('../../common/components/conIsOnoffRadio',
                                {checked: true}) %>
                                <h2>지역</h2>
                                <select
                                    class="form-select"
                                    aria-label="Default select example"
                                >
                                    <%-
                                    include('../../common/components/conLocationSelect',
                                    {checked: true}) %>
                                </select>
                                <div class="row mb-3">
                                    <label
                                        for="conLocation"
                                        class="col-sm-2 col-form-label"
                                        >주소</label
                                    >
                                    <div class="col-sm-10">
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="conLocation"
                                            name="conLocation"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <h2 class="fw-bold fs-5">행사 가격 및 규모</h2>
                    <div class="row mb-3">
                        <fieldset class="row mb-3">
                            <legend
                                class="col-form-label col-sm-2 pt-0"
                            ></legend>
                            <div class="col-sm-5">
                                <%-
                                include('../../common/components/conIsFreeRadio',
                                {checked: true}) %>
                                <div class="row mb-3">
                                    <label
                                        for="conPrice"
                                        class="col-sm-2 col-form-label"
                                        >가격</label
                                    >
                                    <div class="col-sm-10">
                                        <input
                                            type="number"
                                            class="form-control"
                                            id="conPrice"
                                            name="conPrice"
                                            disabled
                                        />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="row mb-3">
                        <label for="conPeople" class="col-sm-2 col-form-label"
                            >규모</label
                        >
                        <div class="col-sm-10">
                            <input
                                type="number"
                                class="form-control"
                                id="conPeople"
                                name="conPeople"
                            />
                        </div>
                    </div>

                    <button
                        type="button"
                        class="btn btn-primary"
                        onclick="registerConference()"
                    >
                        행사 등록
                    </button>
                </form>
            </div>
        </main>
