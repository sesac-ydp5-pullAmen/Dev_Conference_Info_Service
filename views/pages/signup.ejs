                    <input
                        type="email"
                        class="form-control"
                        id="userEmail"
                        name="userEmail"
                        placeholder="email@example.com"
                    />
                </div>

                <select
                    class="form-select"
                    aria-label="Default select example"
                    name="userCategory"
                >
                    <option selected>관심분야를 선택해주세요.</option>
                    <option value="ai">AI</option>
                    <option value="web">웹 개발</option>
                    <option value="git">git</option>
                </select>

                <button type="button" onclick="register()">회원 가입</button>
            </form>

            <a href="/signin">Register</a>
        </main>
        <%- include('../common/footer.ejs') %>

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <script>
            // 회원가입 등록 버튼
            function register() {
                const form = document.forms['form_register'];
                //if (!form.checkValidity()) {
                //    form.reportValidity();
                //    return;
                //}
                axios({
                    method: 'POST',
                    url: '/signup',
                    data: {
                        userId: form.userId.value,
                        userPw: form.userPw.value,
                        userName: form.userName.value,
                        userAddr: form.userAddr.value,
                        userPost: form.userPost.value,
                        userEmail: form.userEmail.value,
                        userCategory: form.userCategory.value,
                    },
                }).then((res) => {
                    console.log(res);
                    if (res) {
                        alert(`${res.data.message}`);
                    }
                });
                //.then(() => {
                //   document.location.href = '/signin'; // ->/login으로?
                //});
            }
            // 아이디 중복 체크 버튼
            function idCheck() {
                const form = document.forms['form_register'];
                axios({
                    method: 'GET',
                    url: `/exists/${form.userId.value}`,
                    data: {userId: form.userId.value,},   
                }).then((res) => {
                    if (res.data.result === true) {
                        alert('이미 존재하는 아이디입니다.');
                    } else if (res.data.result === false) {
                        alert('사용 가능한 아이디입니다.');
                    } else {
                        alert('서버 오류가 발생했습니다.');
                    }
                });
            }
            
            // 비밀번호 일치 동적 폼
            const passwordInput = document.getElementById('userPw');
            const passwordCheckInput = document.getElementById('userPwCheck');
            const passwordMatchMessage = document.getElementById('passwordMatchMessage');
            function checkPasswordMatch() {
                const password = passwordInput.value;
                const confirmPassword = passwordCheckInput.value;

                if (password === confirmPassword) {
                    passwordMatchMessage.textContent = '비밀번호가 일치합니다.';
                    passwordMatchMessage.style.color = 'green';
                } else {
                    passwordMatchMessage.textContent = '비밀번호가 일치하지 않습니다.';
                    passwordMatchMessage.style.color = 'red';
                }
            }
            passwordCheckInput.addEventListener('blur', checkPasswordMatch);
        </script>
    </body>
