<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../common/head.ejs', {title: '유저 조회 페이지' }) %>
        <link
            rel="stylesheet"
            href="/static/css/pages/myPage/managerAside.css"
        />
        <link rel="stylesheet" href="/static/css/pages/myPage/allUser.css" />
        <link rel="stylesheet" href="/static/css/pages/myPage/conHandler.css" />
        <link rel="stylesheet" href="/static/css/pages/myPage/myRevList.css" />
        <style>
            th {
                font-size: 1rem;
                font-weight: 500;
            }
        </style>
    </head>
    <body>
        <%- include('../../common/header.ejs') %>
        <main>
            <%- include('./managerAside') %>

            <div class="cardCenter content">
                <div class="container">
                    <div class="row">
                        <div class="marginRemove">
                            <div class="card">
                                <div class="card-body">
                                    <table class="table text-center">
                                        <thead>
                                            <tr class="border-bottom">
                                                <th>아이디</th>
                                                <th class="un-mobile">이름</th>
                                                <th class="un">이메일</th>
                                                <th class="un">지역</th>
                                                <th class="un">관심 분야</th>
                                                <th class="un-mobile">
                                                    관리자
                                                </th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let user of users) { %>
                                            <tr
                                                class="border-bottom"
                                                id="tr_<%= user.id %>"
                                            >
                                                <td><%= user.user_id %></td>
                                                <td class="un-mobile">
                                                    <%= user.user_name %>
                                                </td>
                                                <td class="un">
                                                    <%= user.user_email %>
                                                </td>
                                                <td class="un">
                                                    <%= user.user_addr %>
                                                </td>
                                                <td class="un">
                                                    <%= user.user_category %>
                                                </td>
                                                <td class="un-mobile">
                                                    <%= user.user_isManager ===
                                                    true ? 'O' : 'X' %>
                                                </td>
                                                <% if (user.user_isManager ===
                                                true) { %>
                                                <td>
                                                    <button
                                                        class="btn btn-outline-primary"
                                                        type="button"
                                                        onclick="revokeManager(this, '<%= user.id %>')"
                                                    >
                                                        권한 회수
                                                    </button>
                                                </td>
                                                <% } else { %>
                                                <td>
                                                    <button
                                                        class="btn btn-outline-success"
                                                        type="button"
                                                        onclick="makeManager(this, '<%= user.id %>')"
                                                    >
                                                        권한 부여
                                                    </button>
                                                </td>
                                                <% } %>
                                                <td>
                                                    <button
                                                        class="btn btn-outline-danger"
                                                        type="button"
                                                        onclick="deleteUser(this, '<%= user.id%>')"
                                                    >
                                                        삭제
                                                    </button>
                                                </td>
                                            </tr>
                                            <%}%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include('../../common/footer.ejs') %>

        <script>
            // 유저 삭제
            function deleteUser(obj, userId) {
                if (!confirm('정말로 삭제하나요?')) {
                    return;
                }
                axios({
                    method: 'delete',
                    url: '/manager/deleteUser',
                    data: {
                        user_id: userId,
                    },
                }).then((res) => {
                    console.log(res);
                    if (res.data === true) {
                        alert('유저 삭제 성공!');
                        obj.parentElement.parentElement.remove();
                        window.location.reload();
                    } else {
                        alert('유저 삭제 실패');
                        window.location.reload();
                    }
                });
            }
            // 관리자 권한 부여
            function makeManager(obj, userId) {
                axios({
                    method: 'POST',
                    url: '/manager/makeManager',
                    data: {
                        user_id: userId,
                    },
                }).then((res) => {
                    console.log(res);
                    if (res.data === true) {
                        alert('매니저 권한 부여 성공!');
                        window.location.reload();
                    } else {
                        alert('매니저 권한 부여 실패');
                        window.location.reload();
                    }
                });
            }
            // 관리자 권한 회수
            function revokeManager(obj, userId) {
                axios({
                    method: 'POST',
                    url: '/manager/revokeManager',
                    data: {
                        user_id: userId,
                    },
                }).then((res) => {
                    console.log(res);
                    if (res.data === true) {
                        alert('매니저 권한 회수 성공!');
                        window.location.reload();
                    } else {
                        alert('매니저 권한 회수 실패');
                        window.location.reload();
                    }
                });
            }
        </script>
    </body>
</html>
