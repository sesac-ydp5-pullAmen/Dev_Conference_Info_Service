<!DOCTYPE html>
<html lang="ko">
    <head>
        <%- include('../../common/head.ejs', {title: '리뷰 상세' }) %>
        <link rel="stylesheet" href="/static/css/pages/review/detail.css" />
        <style>
            /* img {
                width: 0.5em;
                height: 36px;
            } */
        </style>
    </head>

    <body>
        <%- include('../../common/header.ejs') %>
        <main>
            <div class="wrap">
                <section class="section">
                    <div class="my-editor">
                        <div class="event">
                            <a href="/event/<%-review.con_id%>">
                                <p>[<%- review.con_title %>]</p>
                            </a>
                        </div>
                        <div class="title">
                            <h2><%- review.re_title %></h2>
                        </div>
                        <div class="flex">
                            <div class="author flex2">
                                <img
                                    width="24"
                                    height="24"
                                    src="data:image/svg+xml;base64,"
                                    id="icon1"
                                />

                                <p><%- review.user_id %></p>
                            </div>
                            <div class="flex2">
                                <p><%- review.re_date%></p>
                                <img
                                    src="data:image/svg+xml;base64,"
                                    id="icon2"
                                />
                                <p><%- review.re_count%></p>
                            </div>
                        </div>

                        <div class="content">
                            <hr />
                            <br />
                            <p><%- review.re_content %></p>
                            <br />
                        </div>
                    </div>
                </section>
            </div>
        </main>
        <%- include('../../common/footer.ejs') %>
    </body>
</html>
