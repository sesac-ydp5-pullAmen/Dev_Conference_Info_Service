        <%- include('../../common/header.ejs') %>
        <main>
            <div class="wrap">
                <div class="editor-toolbar">
                    <div class="editor-toolbar__buttons">
                        <ul>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="heading2"
                                >
                                    <i class="bi bi-type-h1"></i>
                                </button>
                            </li>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="heading3"
                                >
                                    <i class="bi bi-type-h2"></i>
                                </button>
                            </li>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="paragraph"
                                >
                                    <span>본문</span>
                                </button>
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="bold"
                                >
                                    <i class="bi bi-type-bold"></i>
                                </button>
                            </li>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="italic"
                                >
                                    <i class="bi bi-type-italic"></i>
                                </button>
                            </li>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="strike"
                                >
                                    <i class="bi bi-type-strikethrough"></i>
                                </button>
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="left"
                                >
                                    <i class="bi bi-text-left"></i>
                                </button>
                            </li>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="center"
                                >
                                    <i class="bi bi-text-center"></i>
                                </button>
                            </li>
                            <li>
                                <button
                                    class="editor-toolbar__button"
                                    data-tiptap-button="right"
                                >
                                    <i class="bi bi-text-right"></i>
                                </button>
                            </li>
                        </ul>

                        <button
                            class="editor-toolbar__button"
                            data-tiptap-button="image"
                        >
                            <i class="bi bi-card-image"></i>
                        </button>
                        <input
                            type="file"
                            id="fileInput"
                            accept="image/*"
                            name="userFile"
                            style="display: none"
                            multiple
                        />
                    </div>
                </div>
                <div class="post-title">
                    <textarea
                        id="post-title-inp"
                        class="textarea_tit"
                        placeholder="제목을 입력하세요"
                    ></textarea>
                </div>
                <div class="my-editor" data-tiptap-editor></div>

                <!-- <div class="mb-3 pb-3 border-bottom">
                        <input
                            type="text"
                            class="form-control"
                            id="subject"
                            name="subject"
                            placeholder="제목을 입력하세요."
                        />
                    </div>
                    <div class="mb-3">
                        <textarea
                            class="form-control"
                            id="content"
                            name="content"
                        ></textarea>
                    </div> -->
                <button type="button" class="btn btn-primary submit">
                    전송
                </button>
            </div>
        </main>
        <%- include('../../common/footer.ejs') %>
    </body>
</html>
